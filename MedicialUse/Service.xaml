<Page x:Class="MedicialUse.Service"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedicialUse"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Servers">

    <Grid>
        <ItemsControl VerticalAlignment="Center" Tag="{Binding}" x:Name="List" MouseDown="List_MouseDown">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Margin="0,10,0,10" Width="500" CornerRadius="20" Background="#002F86">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="SemiBold" FontSize="20" Text="{Binding}">
                            
                        </TextBlock>
                        
                    </Border>
                </DataTemplate>
                
            </ItemsControl.ItemTemplate>
            
        </ItemsControl>







    </Grid>
</Page>
