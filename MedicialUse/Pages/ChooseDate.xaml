<Page x:Class="MedicialUse.ChooseDate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedicialUse"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <TextBlock Text="{Binding ServiceName}" HorizontalAlignment="Center" VerticalAlignment="Center">
             
        </TextBlock>
        <StackPanel Orientation="Horizontal" Height="100" Margin="0,150,0,0" HorizontalAlignment="Center">

            <DatePicker x:Name="datePicker" SelectedDateChanged="DatePicker_SelectedDateChanged" Background="#B2E1F2"/>

                <ComboBox Width="200" SelectionChanged="ComboBox_SelectionChanged" Height="200" Margin="20,25,0,20" >
                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,10,10"/>
                    <ComboBoxItem Content=" Цагаа сонгох"/>
                    <ComboBoxItem Content="08:00"/>
                    <ComboBoxItem Content="08:30"/>
                    <ComboBoxItem Content="09:00"/>
                    <ComboBoxItem Content="09:30"/>
                    <ComboBoxItem Content="10:00"/>
                    <ComboBoxItem Content="10:30"/>
                    <ComboBoxItem Content="11:00"/>
                    <ComboBoxItem Content="11:30"/>
                </ComboBox>


           
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Center" >
            <Border Padding="10" CornerRadius="20" Margin="0,0,30,0" Background="#B2E1F2" Width="200" MouseDown="Back_MouseDown"
            >
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="Black" TextWrapping="Wrap" Text="Буцах" Margin="55,0,0,0" FontSize="20" FontWeight="Bold"/>


                </StackPanel>
            </Border>
            <Border Padding="10" CornerRadius="20" Background="#B2E1F2" Width="200" MouseDown="Next_MouseDown"
>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Foreground="Black" TextWrapping="Wrap" Text="Үргэлжлүүлэх" Margin="15,0,0,0" FontSize="20" FontWeight="Bold"/>


                </StackPanel>
            </Border>


        </StackPanel>

        
    </Grid>
</Page>
